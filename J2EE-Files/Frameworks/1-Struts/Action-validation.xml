<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" 
						"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
						
<validators>
	<field name="un">
		<field-validator type="requiredstring">
			<message>Name has to be provided</message>
		</field-validator>
		<field-validator type="email">
			<message>Name has to be email</message>
		</field-validator>
	</field>

	<field name="pwd">
		<field-validator type="requiredstring">
			<message>City has to be provided</message>
		</field-validator>
	</field>
</validators>



